<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Setting" >
   
    <TextView android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Time" 
        android:textSize="24sp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/spMonitoringTime"/>
    <Spinner
        android:id="@+id/spMonitoringTime"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true" />
    
    <TextView android:id="@+id/tvInterval"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/tvTime"
        android:textSize="24sp"        
        android:text="Intreval" 
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/spInvertal"/>
    <Spinner
        android:id="@+id/spInterval"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/spMonitoringTime"
        android:layout_alignParentRight="true" />
    
    <TextView android:id="@+id/tvStrength"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/tvInterval"
		android:textSize="24sp"        
        android:text="Strength" 
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/spStrength"/>
    <Spinner
        android:id="@+id/spStrength"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/spInterval"
        android:layout_alignParentRight="true" />



</RelativeLayout>